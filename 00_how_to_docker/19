docker run -dt --name Abathur -v ~/Abathur:/root -p 3000:3000 python:2-slim

docker exec Abathur pip install Flask

docker exec Abathur /bin/bash -c 'echo "from flask import Flask\napp = Flask(__name__)\n@app.route('/')\ndef hello():\n\treturn \"Hello World\"" > hello.py'

docker exec Abathur -e FLASK_APP=hello.py flask run --host=0.0.0.0 --port=3000
